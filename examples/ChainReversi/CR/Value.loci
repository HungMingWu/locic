// Chain Reversi Board Cell Value.

namespace CR {

	datatype Value =
		None()
		| Red()
		| Blue();
	
	Value opposite(Value value) {
		switch (value) {
			case Red() {
				return Blue();
			}
			case Blue() {
				return Red();
			}
			case None() {
				return None();
			}
		}
	}
	
	uint8_t valueId(Value value) {
		switch (value) {
			case None() {
				return 0u;
			}
			case Red() {
				return 1u;
			}
			case Blue() {
				return 2u;
			}
		}
	}
	
}

