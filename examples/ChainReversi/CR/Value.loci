// Chain Reversi Board Cell Value.

namespace CR {

	datatype Value =
		Empty()
		| Red()
		| Blue();
	
	Value opposite(Value value) {
		switch (value) {
			case Red() {
				return Blue();
			}
			case Blue() {
				return Red();
			}
			case Empty() {
				return Empty();
			}
		}
	}
	
	uint8_t valueId(Value value) {
		switch (value) {
			case Empty() {
				return 0u;
			}
			case Red() {
				return 1u;
			}
			case Blue() {
				return 2u;
			}
		}
	}
	
}

