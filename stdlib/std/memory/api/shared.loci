import std.memory 0.1.0 {
	
	namespace std {
		
		template <typename T>
		class shared_ptr {
			static shared_ptr<T> create(T value);
			
			static shared_ptr<T> from_ptr(T* ptr);
			
			static shared_ptr<T> null();
			
