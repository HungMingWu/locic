void print(const char* text);

void sleep(int seconds);

// Entry point.
int main() {
	auto renderWindow = sf::RenderWindow("Chain Reversi");
	
	renderWindow.setFramerateLimit(25);
	
	uint8_t i = 0;
	
	printf("Start!\n");
	
	while (i < 255) {
		printf("At index %u.\n", i);
		renderWindow.clear(sf::Color(i, i, i, 255));
		renderWindow.display();
		i = i + 1;
	}
	
	printf("Terminating...\n");
	
	sleep(1);
	
	return 0;
}

