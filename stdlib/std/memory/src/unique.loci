export std.memory 0.1.0 {
	
	namespace std {
		
		template <typename T>
		class unique_ptr(T* ptr) {
			static create(T value) {
				return @(new_raw<T>(move value));
			}
			
			static null() {
				return @(null);
			}
			
			~ {
				if (@ptr != null) {
					delete_raw<T>(@ptr);
				}
			}
			
			lval<T> ptr_lval<T> deref() const {
				return *@ptr;
			}
		}
		
		template <typename T>
		unique_ptr<T> new_unique(T value) {
			return unique_ptr<T>::create(move value);
		}
		
	}
	
}

