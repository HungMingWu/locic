// Test output.
void testPrint(const char * const str, ...);

exception ExampleError(int value);

void throwFunction0() {
	try {
		testPrint("0: Throwing.");
		throw ExampleError(256);
		testPrint("0: THROW ERROR!");
	} catch (ExampleError error) {
		testPrint("0: Caught error with value %d.", error.value);
	}
}

void throwFunction1() {
	try {
		testPrint("1: Calling 0.");
		throwFunction0();
		testPrint("1: Successfully finished 0.");
		
		testPrint("1: Throwing.");
		throw ExampleError(512);
		testPrint("1: THROW ERROR!");
	} catch (ExampleError error) {
		testPrint("1: Caught error with value %d.", error.value);
	}
}

void throwFunction2() {
	try {
		testPrint("2: Calling 1.");
		throwFunction1();
		testPrint("2: Successfully finished 1.");
	} catch (ExampleError error) {
		testPrint("2: Caught error with value %d.", error.value);
	}
}

// Entry point.
int testEntryPoint(int argc, char ** argv) {
	throwFunction2();
	return 0;
}

